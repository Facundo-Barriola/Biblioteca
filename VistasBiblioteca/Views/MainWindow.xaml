<Window x:Class="VistasBiblioteca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VistasBiblioteca"
        mc:Ignorable="d"
        Title="Biblioteca" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Administración de Libros">
                <Frame x:Name="MainFrame" Source="MenuLibros.xaml"></Frame>
            </TabItem>
            <TabItem Header="Ubicación Libros">
                <Frame x:Name="UbiacionFrame" Source="UbicacionLibro.xaml"></Frame>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
